---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
const {title} = Astro.props;

import '@fontsource-variable/exo-2';
import '@fontsource/lato/300.css';
import '@fontsource/lato/400.css';
import '@fontsource/lato/700.css';
import '@fontsource/lato/900.css';
---
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <script src="../scripts/flowbite.min.js"></script>
    <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "LocalBusiness",
          "name": "NewFront",
          "image": "",
          "@id": "",
          "url": "https://www.newfront.be/",
          "telephone": "",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "",
            "addressLocality": "Westerlo",
            "postalCode": "2260",
            "addressCountry": "BE"
          },
          "priceRange": "$",
          "sameAs": [
            "https://www.facebook.com/newfront.be/",
            "https://www.instagram.com/newfront.be/"
          ],
          "openingHoursSpecification": {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
              "Sunday"
            ],
            "opens": "00:00",
            "closes": "23:59"
          }
        }
        </script>
        <script defer src="https://api.pirsch.io/pa.js"
        id="pianjs"
        data-code="plUV6TmyN1H7ws2YidWMbCmDDjp9D1qf"></script>
</head>
<body class="text-sky-950 font-['lato']">
    <Header />
    <slot />
    <Footer />
</body>
</html>